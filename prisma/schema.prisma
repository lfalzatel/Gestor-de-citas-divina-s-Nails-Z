generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  password     String
  name         String?
  lastName     String?
  phone        String?
  address      String?
  birthDate    DateTime?
  role         Role      @default(USER)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Customer {
  id           String   @id @default(cuid())
  name         String
  lastName     String
  email        String   @unique
  phone        String
  address      String?
  birthDate    DateTime?
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relaciones
  appointments Appointment[]
}

model Employee {
  id           String   @id @default(cuid())
  name         String
  lastName     String
  email        String   @unique
  phone        String
  address      String
  birthDate    DateTime
  hireDate     DateTime
  specialty    String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  // Relaciones
  appointments Appointment[]
}

model Service {
  id          String   @id @default(cuid())
  name        String
  description String
  category    String
  duration    Int      // en minutos
  price       Int      // en pesos COP
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relaciones
  appointments Appointment[]
}

model Appointment {
  id          String           @id @default(cuid())
  customerId  String
  employeeId  String
  serviceId   String
  date        DateTime
  startTime   DateTime
  endTime     DateTime
  status      AppointmentStatus @default(PROGRAMADA)
  notes       String?
  totalPrice  Int
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  // Relaciones
  customer Customer @relation(fields: [customerId], references: [id])
  employee Employee @relation(fields: [employeeId], references: [id])
  service  Service  @relation(fields: [serviceId], references: [id])
}

enum Role {
  ADMIN
  USER
}

enum AppointmentStatus {
  PROGRAMADA
  COMPLETADA
  CANCELADA
  NO_ASISTIO
}